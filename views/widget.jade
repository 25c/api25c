    style(type="text/css")
      body { 
        margin: 0; 
        color: #000;
        font: normal normal 400 14px 'Adobe Garamond Pro', Garamond, 'Palatino Linotype', Serif;
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -o-user-select: none;
        user-select: none;
        font-smooth: always;
        -webkit-font-smoothing: antialiased;
        font-smoothing: antialiased;
      }
      h1, h2 {
        font: normal normal 600 12px helvetica, arial, sans-serif;
        font-weight: 600px;
      }
      h3 {
        font: normal normal 600 12px helvetica, arial, sans-serif;
        font-weight: bold;
        text-transform: uppercase;
        color: #7c7b7b;
      }
            
      .tip-container {
        float: right;
        position: relative;
        text-align: center;
      }
      input.tip-input, .tip-submit {
        font: normal normal 600 12px helvetica, arial, sans-serif;
      }
      input.tip-input {
        width: 50px;
        float: left;
        height: 37px;
        padding: 0;
        margin: 0;
        text-align: center;
        color: #3f4e52;
        border: 1px solid #d2cfcf;
        -moz-box-shadow:    inset 0 0px 5px #e2e2e2;
        -webkit-box-shadow: inset 0 0px 5px #e2e2e2;
        box-shadow:         inset 0 0px 5px #e2e2e2;
        -webkit-appearance: none;
      }
      input.tip-input:focus {
        outline: none;
        color: #202223;
        border: 1px solid #BAD7DF;
        -moz-box-shadow:    inset 0 0px 2px #ceecf6, 0 0 4px #ceecf6;;
        -webkit-box-shadow: inset 0 0px 2px #ceecf6, 0 0 4px #ceecf6;;
        box-shadow:         inset 0 0px 2px #ceecf6, 0 0 4px #ceecf6;;
      }
      .tip-controls {
        float: left;
      }
      .tip-increase, .tip-decrease {
        height: 5px;
        width: 10px;
        margin: 0 2px;
        padding: 7px 5px;
        background-color: #9aaeb4;
        color: white;
        cursor: pointer;
        font-size: 20px;
      }
      .tip-increase:hover, .tip-decrease:hover {
        background-color: #62828c;
      }
      .tip-increase.active, .tip-decrease.active {
        background-color: #696969;
      }
      .tip-decrease {
        margin-top: 1px;
      }
      .tip-increase .tip-arrow, .tip-decrease .tip-arrow {
        height: 5px;
        width: 10px;
        background-image: url('#{ ASSETS_URL_BASE }/style/button-arrows.png');
        background-repeat: no-repeat;
      }
      .tip-decrease .tip-arrow {
        background-position: 0 -5px;
      }
      .tip-submit {
        float: left;
        height: 39px;
        line-height: 40px;
        width: 50px;
        background-color: #3f4e52;
        color: white;
        padding: 0 5px;
        cursor: pointer;
      }
      .tip-submit:hover {
        background-color: #416b76;
      }
      .tip-submit.active {
        background-color: #365a63;
        -moz-box-shadow:    inset 0 3px 4px #284249;
        -webkit-box-shadow: inset 0 3px 4px #284249;
        box-shadow:         inset 0 3px 4px #284249;
      }
      .tip-confirm {
        font: normal normal 400 12px helvetica, arial, sans-serif;
        display: none;
      }
      .tip-confirm > div {
        width: 136px;
        margin: 5px 0 2px 0; 
      }
      .tip-update {
      }
      .clear{
        clear: both;
      }
      a, a:link, a:visited {
        cursor: pointer;
        color: #08c;
        text-decoration: none;
      }
            
      .tip-container.small-button input.tip-input {
        height: 23px;
      }
      
      .tip-container.small-button .tip-increase, .tip-container.small-button .tip-decrease {
        height: 4px;
        width: 10px;
        padding: 4px 5px;
      }
      
      .tip-container.small-button .tip-submit {
        height: 25px;
        line-height: 25px;
      }
      
      #info-container {
        z-index: 10;
        position: absolute;
        display: none;
        background-color: #eff5f7;
        border: 1px solid #d2cfcf;
        padding: 5px;
        font: normal normal 400 12px helvetica, arial, sans-serif;
      }
      #info-container .tip-amount {
        font-weight: 600;
      }
      
      
    block css

