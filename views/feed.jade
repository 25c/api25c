extends widget

block scripts
  | <script>
  include js/feed.js
  include js/jquery.animate-colors-min.js
  | </script>

block css
  style(type="text/css")
    h1 {
      margin: 0 0 20px 0;
    }
    h2 {
    }
    body {
      position: relative;
      border: 1px solid #d2cfcf;
      width: 650px;
    }
    #input-container {
      padding: 20px;
      border-bottom: 1px solid #d2cfcf;
      margin: 0 0 -1px 0;
      //- background-color: #eff5f7;
    }
    #input-container > h1 {
      float: left;
    }
    #top-logo {
      margin: -8px 0 0 0;
      width: 43px;
      height: 30px;
      float: right;
      background-repeat: no-repeat;
      background-image: url('#{ ASSETS_URL_BASE }/style/top-nav-logo.png');
    }
    .user-image {
      display: none;
      float: left;
      height: 50px;
      width: 50px;
      margin: 0 10px 0 0;
    }
    textarea#comment-input {
      font: inherit;
      float: left;
      height: 39px;
      width: 451px;
      border: 1px solid #d2cfcf;
      margin: 0 0 0 -1px;
      padding: 5px;
      line-height: 14px;
      resize: none;
    }
    textarea#comment-input.default {
      font-style: italic;
      color: #4c4c4c;
    }
    textarea#comment-input.error {
      color: #bf3a3a;
    }
    textarea#comment-input:focus {
      outline: none;
      border: 1px solid #BAD7DF;
      -moz-box-shadow:    inset 0 0px 2px #ceecf6, 0 0 4px #ceecf6;;
      -webkit-box-shadow: inset 0 0px 2px #ceecf6, 0 0 4px #ceecf6;;
      box-shadow:         inset 0 0px 2px #ceecf6, 0 0 4px #ceecf6;;
    }
    #input-container .tip-container {
      float: left;
    }
    #feed-container {
      display: none;
      position: relative;
      margin: 20px 0 0 0;
    }
    #feed-expand {
      display: none;
      position: absolute;
      bottom: -1px;
      height: 30px;
      width: 100%;
      background-color: #eff5f7;
      border-bottom: 1px solid #d2cfcf;
      cursor: pointer;
      text-align: center;
    }
    #feed-expand h3 {
      margin: 0;
      line-height: 30px;
    }
    #promote-container {
      clear: both;
      display: none;
      background-color: #eff5f7;
      padding: 20px 0 20px 84px;
    }
    #promote-container .user-image {
      width: 40px;
      height: 40px;
      background-size: 40px 40px;
    }
    #promote-container form.tip-form {
      float: left;
    }
    #promote-container .tip-container {
      border: 0px none transparent;
    }
    #promote-container .tip-send {
      padding: 0;
    }
    #promote-container #promote-text {
      float: left;
      margin: 0 0 0 10px;
    }
    #feed-title {
      margin: 0 20px 5px 20px;
    }
    #feed-title + .feed-item {
      border-top: 0 none transparent;
    }
    #feed-title + .feed-item .item-body, #feed-title + .feed-item .item-name {
      font-size: 16px;
      line-height: 19px;
    }
    .feed-item {
      padding: 15px 20px;
      border-top: 1px solid #d2cfcf;
    }
    .feed-item.initial {
      background-color: #fffde3;
    }
    .item-image {
      float: left;
      height: 50px;
      width: 50px;
      background-repeat: no-repeat;
      background-size: 50px 50px;
      text-align: center;
      font-size: 11px;
      line-height: 1.1em;
      color: white;
    }
    .item-text {
      float: left;
      width: 470px;
      margin: 1px 0 0 15px;
    }
    .item-controls {
      float: right;
      background-color: #3f4e52;
      height: 20px;
      cursor: pointer;
      color: white;
      font: normal normal 600 12px helvetica, arial, sans-serif;
    }
    .item-footer {
      background-color: #ddd;
      margin: 20px 0 0 0;
    }
    .item-like {
      float: left;
      width: 85px;
      height: 20px;
    }
    .item-total {
      float: left;
      margin-right: 10px;
    }
    .item-promote-container {
      float: left;
      height: 15px;
      width: 15px;
      background-color: #9aaeb4;
      padding: 4px 0 0 5px;
      color: white;
      cursor: pointer;
      font-size: 20px;
      transition: background-color 0.25s;
      -moz-transition: background-color 0.25s;
      -webkit-transition: background-color 0.25s;
      -o-transition: background-color 0.25s;
    }
    .item-promote-container:hover {
      background-color: #62828c;
    }
    .item-promote {
      height: 11px;
      width: 10px;
      background-image: url('#{ ASSETS_URL_BASE }/style/button-plus-minus.png');
      background-repeat: no-repeat;
    }

block content
  #fb-root
  script
    (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=180097582134534";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
    
  #input-container
    h1
      span.bold 
        | Top fan of
        span#site-name  this site
        |? 
      |You have
      span.balance-amount.bold  0 points
      |  to give and share your thoughts.
      //- TODO: Update buy more points URL
      a(href="#{WEB_URL_BASE}/tipper/points", target="_blank")  Get more points...
    #top-logo
    .clear
    .user-image
    form.tip-form(method="POST", target="_blank", action="/tip/#{req.params.button_uuid}")
      include partials/_button_standard.jade
      textarea#comment-input.default(name="comment_text") Leave a note with your contribution...
    .clear
  #feed-container
    #info-container
    #promote-container
      .user-image
      form.tip-form(method="POST", target="_blank", action="/tip/#{req.params.button_uuid}")
        input#comment-uuid(name="comment_uuid", type="hidden")
        include partials/_button_standard.jade
      #promote-text
        h1 
          .bold Add your points behind this top fan's!        
          | You have
          span.balance-amount.bold  0 points
          |  to give.
          a(href="#{WEB_URL_BASE}/tipper/points", target="_blank")  Get more points...
      .clear
    h2#feed-title What some of our top fans are thinking:
  #feed-expand
    h3 Show All Notes