extends widget

block scripts
  | <script>
  include js/feed.js
  include js/jquery.animate-colors-min.js
  | </script>

block css
  style(type="text/css")
    h1 {
      margin: 0 0 20px 0;
    }
    h2 {
    }
    body {
      position: relative;
      border: 1px solid #d2cfcf;
    }
    #signed-in {
      display: none;
    }
    #existing-user {
      margin-top: 5px;
    }
    #input-container {
      padding: 20px 20px 10px 20px;
      border-bottom: 1px solid #d2cfcf;
      margin: 0 0 -1px 0;
    }
    #input-container > h1 {
      margin: 0 48px 20px 0;
    }
    #top-logo {
      position: absolute;
      right: 20px;
      top: 12px;
      width: 43px;
      height: 30px;
      background-repeat: no-repeat;
      background-image: url('#{ ASSETS_URL_BASE }/style/top-nav-logo.png');
    }
    #form-container {
      position: relative;
    }
    .user-image {
      display: none;
      left: 0px;
      top: 0px;
    }
    .user-image, .item-image {
      position: absolute;
      height: 50px;
      width: 50px;
      background-repeat: no-repeat;
      background-size: 50px 50px;
      text-align: center;
      font-size: 11px;
      line-height: 1.1em;
      color: white;
    }
    form.tip-form {
      width: 100%;
    }
    #comment-container {
      margin: 0 0 0 157px;
    }
    textarea#comment-input {
      font: inherit;
      height: 39px;
      width: 100%;
      margin: 0 0 0 -10px;
      border: 1px solid #d2cfcf;
      padding: 5px;
      line-height: 14px;
      resize: none;
    }
    textarea#comment-input.default, #pseudonym-container input.default {
      font-style: italic;
      color: #4c4c4c;
    }
    textarea#comment-input.error {
      color: #bf3a3a;
    }
    textarea#comment-input:focus, #pseudonym-container input:focus {
      outline: none;
      border: 1px solid #BAD7DF;
      -moz-box-shadow:    inset 0 0px 2px #ceecf6, 0 0 4px #ceecf6;;
      -webkit-box-shadow: inset 0 0px 2px #ceecf6, 0 0 4px #ceecf6;;
      box-shadow:         inset 0 0px 2px #ceecf6, 0 0 4px #ceecf6;;
    }
    #pseudonym-container {
      position: relative;
      clear: both;
      padding: 5px 0 0 0;
    }
    #pseudonym-container label {
      float: left;
      padding: 5px 5px 0 0;
      font: normal normal normal 11px helvetica, arial, sans-serif;
    }
    #pseudonym-container input {
      float: left;
      padding: 0 0 1px 5px;
      font: inherit;
      font-size: 13px;
      border: 1px solid #d2cfcf;
    }
    #input-container .tip-container {
      position: absolute;
      top: 0;
      left: 0px;
    }
    #feed-container {
      display: none;
      position: relative;
      margin: 20px 0 0 0;
    }
    #feed-expand {
      display: none;
      position: absolute;
      bottom: -1px;
      height: 30px;
      width: 100%;
      background-color: #eff5f7;
      border-bottom: 1px solid #d2cfcf;
      cursor: pointer;
      text-align: center;
    }
    #feed-expand h3 {
      margin: 0;
      line-height: 30px;
    }
    #promote-container {
      position: relative;
      clear: both;
      display: none;
      background-color: #eff5f7;
      padding: 20px 0 20px 84px;
    }
    #promote-container .user-image {
      top: 20px;
      left: 85px;
      width: 40px;
      height: 40px;
      background-size: 40px 40px;
    }
    #promote-container .tip-container {
      position: absolute;
      top: 20px;
      left: 85px;
      border: 0px none transparent;
    }
    #promote-container .tip-send {
      padding: 0;
    }
    #promote-container #promote-text {
      margin: 0 20px 0 150px;
    }
    #feed-title {
      margin: 0 20px 5px 20px;
    }
    #feed-title + .feed-item {
      border-top: 0 none transparent;
    }
    #feed-title + .feed-item .item-body, #feed-title + .feed-item .item-name {
      font-size: 16px;
      line-height: 19px;
    }
    .feed-item {
      position: relative;
      padding: 15px 20px;
      border-top: 1px solid #d2cfcf;
    }
    .feed-item.initial {
      background-color: #fffde3;
    }
    .item-image {
      left: 20px;
      top: 15px;
    }
    .item-text {
      padding: 1px 0 0 65px;
    }
    .item-hide {
      color: #bf3a3a;
      position: absolute;
      top: 0;
      right: 0;
    }
    .item-controls {
      float: right;
      background-color: #3f4e52;
      height: 20px;
      cursor: pointer;
      color: white;
      font: normal normal bold 12px helvetica, arial, sans-serif;
    }
    .item-footer {
      background-color: #ddd;
      margin: 20px 0 0 0;
    }
    .item-like {
      float: left;
      width: 85px;
      height: 20px;
    }
    .item-total {
      float: left;
      margin-right: 10px;
    }
    .item-promote-container {
      float: left;
      height: 15px;
      width: 15px;
      background-color: #9aaeb4;
      padding: 4px 0 0 5px;
      color: white;
      cursor: pointer;
      font-size: 20px;
      transition: background-color 0.25s;
      -moz-transition: background-color 0.25s;
      -webkit-transition: background-color 0.25s;
      -o-transition: background-color 0.25s;
    }
    .item-promote-container:hover {
      background-color: #62828c;
    }
    .item-promote {
      height: 11px;
      width: 10px;
      background-image: url('#{ ASSETS_URL_BASE }/style/button-plus-minus.png');
      background-repeat: no-repeat;
    }

