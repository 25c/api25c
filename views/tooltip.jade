style(type="text/css")
  #tip-25c-tooltip {
    position:absolute;
    z-index:1000000000;
    left:0;
    top:0;
    width:180px;
    visibility:hidden;
    padding:10px;
    margin:1px 0 0;
    background-color:#ffffff;
    border:1px solid #ccc;
    border:1px solid rgba(0,0,0,0.2);
    *border-right-width:2px;
    *border-bottom-width:2px;
    -webkit-border-radius:5px;
    -moz-border-radius:5px;
    border-radius:5px;
    -webkit-box-shadow:0 5px 10px rgba(0,0,0,0.2);
    -moz-box-shadow:0 5px 10px rgba(0,0,0,0.2);
    box-shadow:0 5px 10px rgba(0,0,0,0.2);
    -webkit-background-clip:padding-box;
    -moz-background-clip:padding;
    background-clip:padding-box;
    line-height: 0;
    -webkit-box-sizing: border-box;
  	-moz-box-sizing: border-box;
  	box-sizing: border-box;
  }
  #tip-25c-tooltip * {
    font-family: Helvetica,Arial,sans-serif !important;
    font-size:13px !important;
    line-height:16px !important;
    text-align:left !important;
    color:#333 !important;
    text-decoration: none !important;
    font-weight: 400;
    padding: 0;
    margin: 0;
    border: 0px none transparent !important;
    border-radius: 0 !important;
    -moz-border-radius: 0 !important;
    -webkit-border-radius: 0 !important;
    -webkit-box-sizing: border-box;
  	-moz-box-sizing: border-box;
  	box-sizing: border-box;
  }

if user != null
  script
    window.loggedIn = true;
    window.referrerUrl = "#{referrer_url}"
    window.userName = "#{user.displayName}"
    window.pledgeName = "#{user.pledge_name}"
  div.if-count(style="display:none;")
    span(style="font-weight:800;")#count 0 
    span(style="font-weight:800;") &nbsp;pledged
  div
    span.no-count Pledge 25c&nbsp;
    span#button-user to this user
    span#button-title
  div.if-count(style="display:none") Click again to pledge more!
  div.if-self(style="display:none;color:#308014;") You cannot pledge to yourself.
  div(style="clear:both;")
  div(style="float:left;margin:5px 5px 0 0;") Share Your Pledge:
  img#fb-share-link(src="https://s3.amazonaws.com/assets.25c.com/logos/facebook-20.png", style="float:left;cursor:pointer;padding-top:3px;height:auto;width:20px;border-radius:")
  img#tw-share-link(src="https://s3.amazonaws.com/assets.25c.com/logos/twitter-20.png", style="float:left;cursor:pointer;padding-top:3px;height:auto;width:20px;margin-left:5px;")
  div(style="clear:both;padding-top:0px;")
    if user.pictureUrl != ""
      if user.nickname != ""
        a(href=user.nicknameUrl, style="text-decoration:none;")
          img(src=user.pictureUrl, style="float:left;display:block;border:0;margin-top:2px;margin-right:5px;border-radius:2px;max-width:20px;max-height:20px;")
      else
        img(src=user.pictureUrl, style="float:left;display:block;border:0;margin-top:2px;margin-right:5px;border-radius:2px;max-width:20px;max-height:20px;")
    div(style="float:left;padding-top:4px;")
      if user.nickname != ""
        a(href=user.nicknameUrl, target="_blank", style="text-decoration:none;") #{user.displayName}
      else
        #{user.displayName}
    div(style="clear:both;")
else
  script
    window.loggedIn = false;
  div
    span Pledge 25c&nbsp;
    span#button-user to this user
    span#button-title
  div(style="padding-top:5px;")
    a(href="https://www.25c.com/", target="_blank") Learn more about 25c